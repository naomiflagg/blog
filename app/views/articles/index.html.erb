<h1>All articles</h1>

<% if params[:month] %>
  <% @articles = @articles.select { |art| art.month == params[:month].to_i } %>
<% end %>

<ul id='articles'>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article), class: 'article_title', id: "article_#{article.id}" %>
    </li>
  <% end %>
</ul>
<br>

<% if logged_in? %>
  <p><%= link_to 'Create a new article', new_article_path, class: 'new_article' %></p>
<% end %>
<p><%= link_to 'View all tags', tags_path %></p>
